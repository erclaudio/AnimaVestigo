<style>
  .centered-entry {
    min-height: 70vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="content form-group" style="margin-top: 100px;">
  <h1>New Entry</h1>
  <%= form_with(model: @entry) do |form| %>
    <div class="form-group py-5">
      <%= form.label :Title%>
      <%= form.text_field(:name, class:"form-control")%>
      <br>
      <%= form.label :link%>
      <%= form.text_field :link, class:"form-control"%>
      <br>
      <%= form.label :content%>
      <%= form.text_area :content, size: "70x5", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit class:"form-control"%>
    </div>
  <% end %>
</div>
</div>